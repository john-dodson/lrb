<h1>Listing caterers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caterers.each do |caterer| %>
      <tr>
        <td><%= caterer.name %></td>
        <td><%= link_to 'Show', caterer %></td>
        <td><%= link_to 'Edit', edit_caterer_path(caterer) %></td>
        <td><%= link_to 'Destroy', caterer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Caterer', new_caterer_path %>
