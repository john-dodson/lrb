<div class="container">
<div class="site-index">
<div class="body-content">

<div class="row">
  <div class="col-md-12">
    <h2>Plan Your Event</h2>
    <form id="event_selection" action="">
      <fieldset>
        <legend>Select Your Event Type</legend>
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <label for="event">Event Type</label>
              <select class="form-control">
                <% services_array = Service.all.map { |s| [s.service_type, s.id] } %>
                <%= options_for_select(services_array) %>
              </select>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Select a Venue</legend>
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <label for="venue">Venue</label>
              <select class="form-control">
              </select>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Select a Date</legend>
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <div class= "jflatTimeline">
                <div class= "timeline-wrap">
                  <div class= "month-year-bar">
                    <div class = "year"><a class = "prev"><i class = "fa fa-angle-left"></i></a><%= Date.today.year %><a class = "next"><i class = "fa fa-angle-right"></i></a></div>
                    <div class = "month"><a class = "prev"><i class = "fa fa-angle-left"></i></a><%= Date::MONTHNAMES[Date.today.month] %><a class = "next"><i class = "fa fa-angle-right"></i></a></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Select a Caterer</legend>
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <label for="caterer">Caterer</label>
              <select class="form-control">
              </select>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Select a Photographer</legend>
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <label for="photographer">Photographer</label>
              <select class="form-control">
              </select>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Confirm Your Choices</legend>
        <div class="row">
          <div class="col-lg-12">
            <p>
                Please confirm the choices you made for your even package.
            </p>
          </div>
            <div class="col-lg-12">
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <label class="sr-only" for="email">Your Email Address</label>
                    <input type="text" class="form-control" id="email" placeholder="Your Email Address">
                  </div>
                </div>
              </div>
            </div>
            <noscript>
                <input class="nocsript-finish-btn sf-right nocsript-sf-btn" type="submit" value="finish"/>
            </noscript>
        </div>
        <noscript>
            <input class="nocsript-finish-btn sf-right nocsript-sf-btn" type="submit" value="finish"/>
        </noscript>
      </fieldset>
    </form>
  </div>
</div>