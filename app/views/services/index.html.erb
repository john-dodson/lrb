<div class="container">
<div class="site-index">
<div class="body-content">

<div class="row">
  <div class="col-md-12">
    <h2>Plan Your Event</h2>
    <form id="event_selection" height: "auto" action="">
      <fieldset>
        <legend>Select Your Event Type</legend>
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <label for="event">Event Type:</label>
              <%= select(:service, :service_id, options_for_select(@services.collect { |s| [s.service_type.titleize, s.id] }, 1), {}, { id: 'services_select', :class => "form-control" }) %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group">
              <label for="theme">Event Theme:</label>
              <input type="text" class="form-control" id="theme" placeholder="Your Event Theme">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <label for="guest">Number of Guests:</label>
              <input type="text" class="form-control" id="guest" placeholder="0">
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Select a Venue</legend>
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <label for="venue">Venue:</label>
              <%= select(:venue, :venue_id, options_for_select(@venues.collect { |v| [v.name.titleize, v.id] }, 1), {}, { id: 'venues_select', :class => "form-control" }) %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group">
              <label for="date">Event Date:</label>
              <div id="date" class="box"></div>
              <div id="date_data">
                <script type="text/javascript">
                  window.dates = <%= raw @vendor_dates.to_json %>;
                </script>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6"></div>
          <div class="col-lg-6">
            <label for="any_date">Any Date?</label>
            <input type="checkbox" id="any_date" value="any"><br>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <label >Venue Description:</label>
