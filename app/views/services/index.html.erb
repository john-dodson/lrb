<div class="container">
<div class="site-index">
<div class="body-content">

<div class="row">
  <div class="col-md-12">
    <h2>Plan Your Event</h2>
    <form id="event_selection" height: "auto" action="">
      <fieldset>
        <legend>Select Your Event Type</legend>
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <label for="event">Event Type</label>
              <%= select(:service, :service_id, options_for_select(@services.collect { |s| [s.service_type.titleize, s.id] }, 1), {}, { id: 'services_select', :class => "form-control" }) %>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Select a Venue</legend>
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <label for="venue">Venue</label>
              <%= select(:venue, :venue_id, options_for_select(@venues.collect { |v| [v.name.titleize, v.id] }, 1), {}, { id: 'venues_select', :class => "form-control" }) %>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Select a Date</legend>
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <select class= "form-control"></select>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <%= select(:vendor_date, :vendor_date, options_for_select(@vendor_dates.collect { |d| [d.date, d.date] }, 1), {}, { id: 'vendor_dates_select', :class => "form-control" }) %>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Select a Florist</legend>
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <label for="caterer">Florist</label>
              <%= select(:florist, :florist_id, options_for_select(@florists.collect { |f| [f.name.titleize, f.id] }), {:prompt => "None"}, { id: 'florists_select', :class => "form-control" }) %>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Select a Caterer</legend>
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <label for="caterer">Caterer</label>
              <%= select(:caterer, :caterer_id, options_for_select(@caterers.collect { |c| [c.name.titleize, c.id] }), {:prompt => "None"}, { id: 'caterers_select', :class => "form-control" }) %>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Select a Photographer</legend>
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <label for="photographer">Photographer</label>
              <%= select(:photographer, :photographer_id, options_for_select(@photographers.collect { |p| [p.name.titleize, p.id] }), {:prompt => "None"}, { id: 'photographers_select', :class => "form-control" }) %>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Confirm Your Choices</legend>
        <div class="row">
          <div class="col-lg-12">
            <p>
                Please confirm the choices you made for your even package.
            </p>
          </div>
            <div class="col-lg-12">
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label class="sr-only" for="email">Your Email Address</label>
                    <input type="text" class="form-control" id="email" placeholder="Your Email Address">
                  </div>
                </div>
              </div>
            </div>
            <noscript>
                <input class="nocsript-finish-btn sf-right nocsript-sf-btn" type="submit" value="finish"/>
            </noscript>
        </div>
        <noscript>
            <input class="nocsript-finish-btn sf-right nocsript-sf-btn" type="submit" value="finish"/>
        </noscript>
      </fieldset>
    </form>
  </div>
</div>